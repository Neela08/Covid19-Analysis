<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#fff"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="38dp"
        android:text=""
        android:textColor="@color/colorAccent"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv1"
        android:layout_centerHorizontal="true"
        android:text=""
        android:textColor="#0000cc"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv1"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="0dp"
        android:textColor="#e6e600"
        android:textSize="25sp"
        android:text=""
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv1"
        android:layout_alignParentStart="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="1dp"
        android:textColor="#000"
        android:text="Confirmed" />

    <TextView
        android:id="@+id/tv5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:layout_alignBottom="@+id/tv4"
        android:layout_centerHorizontal="true"
        android:text="Recovered" />

    <TextView
        android:id="@+id/tv6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv4"
        android:layout_alignParentEnd="true"
        android:textColor="#000"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="-2dp"
        android:text="Deaths" />


    <TextView
        android:id="@+id/bd1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv4"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-13dp"
        android:layout_marginTop="156dp"
        android:textColor="@color/colorAccent"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/bd2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/bd1"
        android:layout_centerHorizontal="true"
        android:textColor="#0000cc"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/bd3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tv6"
        android:layout_alignBottom="@+id/bd1"
        android:layout_marginEnd="-12dp"
        android:layout_marginBottom="1dp"
        android:textColor="#e6e600"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/bd4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bd1"
        android:layout_alignStart="@+id/tv4"
        android:layout_marginStart="-1dp"
        android:textColor="#000"
        android:layout_marginTop="7dp"
        android:text="Confirmed" />

    <TextView
        android:id="@+id/bd5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bd1"
        android:textColor="#000"

        android:layout_alignEnd="@+id/bangladesh"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="14dp"
        android:text="Recovered" />

    <TextView
        android:id="@+id/bd6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bd1"
        android:textColor="#000"
        android:layout_alignStart="@+id/tv6"
        android:layout_marginStart="7dp"
        android:layout_marginTop="4dp"
        android:text="Deaths" />

    <TextView
        android:id="@+id/bangladesh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tv5"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="224dp"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_marginEnd="-12dp"
        android:text="BANGLADESH" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tv5"
        android:layout_alignParentTop="true"
        android:layout_marginTop="100dp"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_marginEnd="9dp"
        android:text="GLOBAL" />

    <LinearLayout
        android:layout_width="match_parent"
android:gravity="center_horizontal"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/button6"
            android:background="@drawable/custom_button"
            android:layout_width="200dp"
            android:textColor="#cc6699"
            android:onClick="symptom"
            android:textStyle="bold"
            android:layout_height="60dp"
            android:text="Check Your Symptoms" />

        <Button
            android:layout_marginTop="15dp"
            android:id="@+id/button5"
            android:textColor="#cc6699"
            android:textStyle="bold"
            android:onClick="stats"
            android:background="@drawable/custom_button"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:text="See Statistics" />

        <Button
            android:id="@+id/button4"
            android:layout_marginTop="15dp"
            android:textColor="#cc6699"
            android:textStyle="bold"
            android:background="@drawable/custom_button"
            android:layout_width="200dp"
            android:onClick="call"
            android:layout_height="60dp"
            android:text="Corona Hotline 16263 " />
        <ImageView
            android:layout_width="200dp"
            android:src="@drawable/bd"
            android:layout_height="180dp" />
    </LinearLayout>


</RelativeLayout>